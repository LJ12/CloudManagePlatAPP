<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBule"
        android:gravity="center"
        android:text="更改课程信息"
        android:textColor="@color/colorBlack"
        android:textSize="18dp" />
        <TextView
            android:id="@+id/TV_CUM_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="课程ID："
            android:textColor="@color/colorBlack" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorHighWhite" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="课程原信息："
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/TV_CUM_3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:text="课程名："
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/TV_CUM_4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:text="课程应上总次数："
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorHighWhite" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="修改课程信息："
        android:textColor="@color/colorBlack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:text="课程名："
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/ET_CUM_1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="课程应上总次数："
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/ET_CUM_2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorHighWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/B_CUM_1"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@color/colorBule"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />

        <Button
            android:id="@+id/B_CUM_2"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="70dp"
            android:background="@color/colorBule"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>