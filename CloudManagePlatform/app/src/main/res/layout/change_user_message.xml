<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBule"
        android:gravity="center"
        android:text="更改用户信息"
        android:textColor="@color/colorBlack"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TV_CUM_1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="用户ID："
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/TV_CUM_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="用户类型："
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorHighWhite"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="用户原信息："
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/TV_CUM_3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="用户名："
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"
        android:textSize="12dp"
        />
    <TextView
        android:id="@+id/TV_CUM_4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="用户密码："
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"
        android:textSize="12dp"
        />
    <TextView
        android:id="@+id/TV_CUM_5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="用户邮箱地址："
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"
        android:textSize="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorHighWhite"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="修改用户信息："
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="用户名："
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"
        android:textSize="12dp"
        />
    <EditText
        android:id="@+id/ET_CUM_1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text=""
        android:layout_marginLeft="60dp"
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"
        android:textSize="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="用户密码："
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"
        android:textSize="12dp"
        />
    <EditText
        android:id="@+id/ET_CUM_2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text=""
        android:layout_marginLeft="60dp"
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"
        android:textSize="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="用户邮箱地址："
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        />
    <EditText
        android:id="@+id/ET_CUM_3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text=""
        android:layout_marginLeft="60dp"
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"
        android:textSize="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorHighWhite"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/B_CUM_1"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@color/colorBule"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />

        <Button
            android:id="@+id/B_CUM_2"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="70dp"
            android:background="@color/colorBule"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>