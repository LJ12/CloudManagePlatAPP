<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorBule"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IV_ICM_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/mo_scanner_back_img" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="录入课程"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"

                />
        </LinearLayout>
        <!-- TabHost的标签 -->
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="35dp"></TabWidget>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorHighWhite" />
        <!-- TabHost的内容 -->
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- 第一个标签要显示的内容 -->
            <LinearLayout
                android:id="@+id/LL_ICM_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="60dp"
                        android:gravity="center"
                        android:text="课程ID"
                        android:textColor="@color/colorBlack"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="课程名"
                        android:textColor="@color/colorBlack"
                        android:textSize="13dp" />
                </LinearLayout>

                <ListView
                    android:id="@+id/LV_ICM_1"
                    android:layout_width="match_parent"
                    android:layout_height="380dp"
                    android:scrollbars="vertical" />

                <Button
                    android:id="@+id/B_ICM_3"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:background="@color/colorBule"
                    android:layout_marginTop="15dp"
                    android:text="提交" />
            </LinearLayout>
            <!-- 第二个标签要显示的内容 -->
            <LinearLayout
                android:id="@+id/LL_ICM_2"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:text="课程ID："
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ET_ICM_1"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="35dp"
                    android:text="课程名："
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ET_ICM_2"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="120dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/B_ICM_1"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/colorBule"
                        android:text="提交" />

                    <Button
                        android:id="@+id/B_ICM_2"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:background="@color/colorBule"
                        android:text="取消" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</TabHost>
